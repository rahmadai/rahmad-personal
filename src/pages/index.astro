---

<MainLayout title="Rahmad | Data Scientist & ML Engineer">
  <Header />
  <ProfileSection />
  
  <section id="skills" class="section">
    <div class="container">
      <h2 class="section-title">Skills & Expertise</h2>
      <div class="skills-container">
        {skills.map(skill => (
          <SkillCard 
            icon={skill.icon} 
            title={skill.title} 
            description={skill.description} 
          />
        ))}
      </div>
    </div>
  </section>
  
  <section id="projects" class="section">
    <div class="container">
      <h2 class="section-title">Featured Projects</h2>
      <div class="projects-grid">
        {projects.map(project => (
          <ProjectCard 
            title={project.title} 
            tags={project.tags} 
            description={project.description} 
          />
        ))}
      </div>
    </div>
  </section>
  
  <section id="speaking" class="section">
    <div class="container">
      <h2 class="section-title">Speaking & Workshops</h2>
      <div class="speaking-grid">
        {speakingEvents.map(event => (
          <SpeakingCard 
            title={event.title} 
            description={event.description} 
            imagePath={event.imagePath} 
          />
        ))}
      </div>
    </div>
  </section>
  
  <section id="contact" class="section">
    <div class="container">
      <h2 class="section-title">Get in Touch</h2>
      <ContactForm />
    </div>
  </section>
  
  <Footer />
</MainLayout>

<style>
.text-container {
    max-width: 800px;
    margin: 0 auto;
    text-align: center; /* Center align like your reference */
    padding: 2rem 1rem;
  }

  .text-container h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #fff;
    margin-bottom: 1rem;
  }

  .text-container p {
    font-size: 1.2rem;
    line-height: 1.6;
    color: #ccc;
  }

  .skills-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }
  
  .projects-grid, .speaking-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }
  
  .speaking-grid {
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  }
  
  @media (max-width: 768px) {
    .projects-grid, .speaking-grid {
      grid-template-columns: 1fr;
    }
  }
</style>